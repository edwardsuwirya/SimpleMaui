<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="FundamentalMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FundamentalMauiApp"
    Shell.FlyoutBehavior="Disabled"
    Title="FundamentalMauiApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <TabBar>
        <Tab Title="PIN"
             Icon="moon.png">
            <ShellContent Route="PinPage" ContentTemplate="{DataTemplate local:PINPage}" />
        </Tab>
        <Tab Title="Calculator"
             Icon="question.png">
            <ShellContent Route="CalculatorPage" ContentTemplate="{DataTemplate local:SimpleCalculatorPage}" />
        </Tab>
    </TabBar>

</Shell>